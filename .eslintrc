{
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "node": true,
        "mocha": true,
        "es6": true
    },
    "plugins": [
        "chai-friendly"
    ],
    "rules": {
        "indent": [
            2,
            "tab"
        ],
        "max-len": 0,
        "comma-dangle": 0,
        "consistent-return": 0,
        "function-paren-newline": [
            "error",
            "never"
        ],
        "implicit-arrow-linebreak": [
            "off"
        ],
        "no-param-reassign": 0,
        "no-underscore-dangle": 0,
        "no-tabs": 0,
        "no-shadow": 0,
        "no-console": 0,
        "no-plusplus": 0,
        "no-unused-expressions": 0,
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "next"
            }
        ],
        "no-use-before-define": 0,
        "chai-friendly/no-unused-expressions": 2
    }
}